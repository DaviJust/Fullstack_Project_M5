<head>
    {{#each listardados}}
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{nome}}</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/5579/5579570.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top" style="background-color: #f9ce07;">
            <div class="container-fluid">
                <a class="navbar-brand" href="/"><img src="/home/img/Logo.png" width="150"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/catalogoactionfigures">Action Figures</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/catalogobrinquedos">Brinquedos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/catalogojogosdemesa">Jogos de Mesa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/catalogogiftcard">Gift Cards</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/listadefuncionarios">Funcionário</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/listaempresas">Empresas</a>
                        </li>
                    </ul>
                    <form class="d-flex" action="/resultado/jogosdemesa/" method="post">
                        <input class="form-control me-2" type="search" name="busca" id="busca">
                        <button class="btn btn-outline-success" type="submit">Buscar</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <br>
        <h1>Informações do Jogo de Mesa</h1>
        <br>
        <div class="cardtoyid">
            <div class="card mb-3 " style="align-items-center max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{img}}" class="img-fluid rounded-start" alt="produto">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{nome}}</h5>
                            <p class="card-text">Gênero: {{genero}}</p>
                            <p class="card-text">Descrição: {{descricao}}</p>
                            <p class="card-text">{{preco}}</p>
                            <a href="/jogodemesa/editar/{{id}}"><button type="button"
                                    class="btn btn-success">Editar</button></a>
                            <a href="/jogodemesa/excluir/{{id}}"><button type="button"
                                    class="btn btn-danger">Excluir</button></a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
    </main>
    <footer>
        <div class="footergira">
            <a href="/">
                <div className='footerlogo'>
                     <img src="/home/img/Logo.png" width="110"/>
                </div>
            </a>
            <div className='redesocias'>
                <h2>Nossas redes sociais</h2>
                <a href="https://web.facebook.com">
                    <p>Facebook</p>
                </a>
                <a href="https://www.instagram.com">
                    <p>Instagram</p>
                </a>
                <a href="https://twitter.co ">
                    <p>Twitter</p>
                </a>
            </div>
            <div className='contatos'>
                <h2>Contatos</h2>
                <p>(11) 4002-8922</p>
                <p>(11) 4002-8922</p>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>